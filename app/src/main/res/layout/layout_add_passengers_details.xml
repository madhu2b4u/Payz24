<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fonts="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <com.payz24.customviews.CustomTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/size_of_value_fifteen"
        android:text="@string/number_of_travellers"
        android:textColor="@color/black"
        fonts:custom_font="@string/aller_std_regular" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="50"
            android:orientation="vertical"
            android:padding="@dimen/size_of_value_fifteen">

            <com.payz24.customviews.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/adults"
                android:textColor="@color/black"
                fonts:custom_font="@string/aller_std_regular" />

            <com.payz24.customviews.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/twelve_plus"
                android:textColor="@color/black_90"
                fonts:custom_font="@string/aller_std_regular" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="50"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ivAdultsMinus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/size_of_value_twenty_five"
                android:layout_marginRight="@dimen/size_of_value_twenty_five"
                android:padding="@dimen/size_of_value_ten"
                android:contentDescription="@string/app_name"
                android:src="@drawable/ic_minus" />


            <com.payz24.customviews.CustomTextView
                android:id="@+id/tvAdultsCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/one"
                android:textColor="@color/black"
                fonts:custom_font="@string/aller_std_regular" />

            <ImageView
                android:id="@+id/ivAdultsPlus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/size_of_value_twenty_five"
                android:layout_marginStart="@dimen/size_of_value_twenty_five"
                android:contentDescription="@string/app_name"
                android:padding="@dimen/size_of_value_ten"
                android:src="@drawable/ic_add" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="50"
            android:orientation="vertical"
            android:padding="@dimen/size_of_value_fifteen">

            <com.payz24.customviews.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/children"
                android:textColor="@color/black"
                fonts:custom_font="@string/aller_std_regular" />

            <com.payz24.customviews.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/two_twelve"
                android:textColor="@color/black_90"
                fonts:custom_font="@string/aller_std_regular" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="50"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ivChildrenMinus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/size_of_value_twenty_five"
                android:layout_marginRight="@dimen/size_of_value_twenty_five"
                android:contentDescription="@string/app_name"
                android:padding="@dimen/size_of_value_ten"
                android:src="@drawable/ic_minus" />


            <com.payz24.customviews.CustomTextView
                android:id="@+id/tvChildrenCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/zero"
                android:textColor="@color/black"
                fonts:custom_font="@string/aller_std_regular" />

            <ImageView
                android:id="@+id/ivChildrenPlus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/size_of_value_twenty_five"
                android:layout_marginStart="@dimen/size_of_value_twenty_five"
                android:padding="@dimen/size_of_value_ten"
                android:contentDescription="@string/app_name"
                android:src="@drawable/ic_add" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="50"
            android:orientation="vertical"
            android:padding="@dimen/size_of_value_fifteen">

            <com.payz24.customviews.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/infants"
                android:textColor="@color/black"
                fonts:custom_font="@string/aller_std_regular" />

            <com.payz24.customviews.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/below_2_years"
                android:textColor="@color/black_90"
                fonts:custom_font="@string/aller_std_regular" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="50"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ivInfantsMinus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/size_of_value_twenty_five"
                android:layout_marginRight="@dimen/size_of_value_twenty_five"
                android:padding="@dimen/size_of_value_ten"
                android:contentDescription="@string/app_name"
                android:src="@drawable/ic_minus" />


            <com.payz24.customviews.CustomTextView
                android:id="@+id/tvInfantsCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/zero"
                android:textColor="@color/black"
                fonts:custom_font="@string/aller_std_regular" />

            <ImageView
                android:id="@+id/ivInfantsPlus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/size_of_value_twenty_five"
                android:layout_marginStart="@dimen/size_of_value_twenty_five"
                android:padding="@dimen/size_of_value_ten"
                android:contentDescription="@string/app_name"
                android:src="@drawable/ic_add" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginTop="@dimen/size_of_value_ten"
        android:gravity="end"
        android:orientation="horizontal"
        android:padding="@dimen/size_of_value_ten">

        <com.payz24.customviews.CustomTextView
            android:id="@+id/tvCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/size_of_value_twenty"
            android:layout_marginRight="@dimen/size_of_value_twenty"
            android:padding="@dimen/size_of_value_ten"
            android:text="@string/cancel"
            android:textColor="@color/colorPrimary"
            fonts:custom_font="@string/aller_std_regular" />


        <com.payz24.customviews.CustomTextView
            android:id="@+id/tvDone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/size_of_value_twenty"
            android:layout_marginRight="@dimen/size_of_value_twenty"
            android:padding="@dimen/size_of_value_ten"
            android:text="@string/done"
            android:textColor="@color/colorPrimary"
            fonts:custom_font="@string/aller_std_regular" />
    </LinearLayout>
</LinearLayout>