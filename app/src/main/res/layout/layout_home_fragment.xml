<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fonts="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/medium_grey"
    android:scrollbarAlwaysDrawHorizontalTrack="true"
    android:scrollbarThumbVertical="@drawable/scroll_bar_drawable">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/size_of_value_twenty"
            android:padding="@dimen/size_of_value_ten">

            <com.payz24.customviews.CustomTextView
                android:id="@+id/tvBookOnPayz24"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/book_on_payz_24"
                android:textColor="@color/black"
                fonts:custom_font="@string/aller_std_bold" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rvBookOnPay24"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_of_value_ten" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical"
            android:padding="@dimen/size_of_value_ten">

            <com.payz24.customviews.CustomTextView
                android:id="@+id/tvRechargeBillPayments"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/recharge_and_pay_bills"
                android:textColor="@color/black"
                fonts:custom_font="@string/aller_std_bold" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rvRechargePayBills"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_of_value_ten" />
        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/size_of_value_twenty"
            android:padding="@dimen/size_of_value_ten">

            <com.payz24.customviews.CustomTextView
                android:id="@+id/tvShopOnPayz24"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/shop_on_payz_24"
                android:textColor="@color/black"
                fonts:custom_font="@string/aller_std_bold" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rvShopOnPay24"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_of_value_ten"
                android:visibility="gone" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>