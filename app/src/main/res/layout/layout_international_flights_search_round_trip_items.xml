<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fonts="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="80"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/size_of_value_ten">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="30"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/ivDepartureAirLineImage"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:contentDescription="@string/app_name"
                        android:src="@mipmap/ic_launcher_round" />

                    <com.payz24.customviews.CustomTextView
                        android:id="@+id/tvDepartureAirwayName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Qatar Airways"
                        android:textColor="@color/black"
                        fonts:custom_font="@string/aller_std_regular" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/size_of_value_ten"
                    android:layout_marginStart="@dimen/size_of_value_ten"
                    android:layout_weight="50"
                    android:gravity="center"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <com.payz24.customviews.CustomTextView
                            android:id="@+id/tvDepartureDepartureTime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/size_of_value_five"
                            android:layout_marginRight="@dimen/size_of_value_five"
                            android:text="03:10"
                            android:textColor="@color/black"
                            fonts:custom_font="@string/aller_std_regular" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:contentDescription="@string/app_name"
                            android:src="@drawable/ic_flight_arrow" />

                        <com.payz24.customviews.CustomTextView
                            android:id="@+id/tvDepartureArrivalTime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/size_of_value_five"
                            android:layout_marginStart="@dimen/size_of_value_five"
                            android:text="14:15"
                            android:textColor="@color/black"
                            fonts:custom_font="@string/aller_std_regular" />

                    </LinearLayout>

                    <com.payz24.customviews.CustomTextView
                        android:id="@+id/tvDepartureViaDetails"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="22h 10m | Via DOH"
                        android:textColor="@color/black_90"
                        fonts:custom_font="@string/aller_std_regular" />

                    <com.payz24.customviews.CustomTextView
                        android:id="@+id/tvOnewayStops"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="0"
                        android:padding="5dp"
                        android:background="@color/orange"
                        android:textColor="@color/white"
                        fonts:custom_font="@string/aller_std_regular" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="@dimen/size_of_value_ten"
                        android:background="@color/black_50" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/size_of_value_ten">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="30"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/ivReturnAirLineImage"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:contentDescription="@string/app_name"
                        android:src="@mipmap/ic_launcher_round" />

                    <com.payz24.customviews.CustomTextView
                        android:id="@+id/tvReturnAirwayName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Qatar Airways"
                        android:textColor="@color/black"
                        fonts:custom_font="@string/aller_std_regular" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/size_of_value_ten"
                    android:layout_marginStart="@dimen/size_of_value_ten"
                    android:layout_weight="50"
                    android:gravity="center"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <com.payz24.customviews.CustomTextView
                            android:id="@+id/tvReturnDepartureTime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/size_of_value_five"
                            android:layout_marginRight="@dimen/size_of_value_five"
                            android:text="03:10"
                            android:textColor="@color/black"
                            fonts:custom_font="@string/aller_std_regular" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:contentDescription="@string/app_name"
                            android:src="@drawable/ic_flight_arrow" />

                        <com.payz24.customviews.CustomTextView
                            android:id="@+id/tvReturnArrivalTime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/size_of_value_five"
                            android:layout_marginStart="@dimen/size_of_value_five"
                            android:text="14:15"
                            android:textColor="@color/black"
                            fonts:custom_font="@string/aller_std_regular" />

                    </LinearLayout>

                    <com.payz24.customviews.CustomTextView
                        android:id="@+id/tvReturnViaDetails"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="22h 10m | Via DOH"
                        android:textColor="@color/black_90"
                        fonts:custom_font="@string/aller_std_regular" />
                    <com.payz24.customviews.CustomTextView
                        android:id="@+id/tvReturnStops"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="0"
                        android:padding="5dp"
                        android:background="@color/orange"
                        android:textColor="@color/white"
                        fonts:custom_font="@string/aller_std_regular" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="30"
            android:gravity="center"
            android:orientation="vertical">

            <com.payz24.customviews.CustomTextView
                android:id="@+id/tvFare"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/size_of_value_five"
                android:layout_marginStart="@dimen/size_of_value_five"
                android:text="39000"
                android:textColor="@color/black"
                fonts:custom_font="@string/aller_std_regular" />

            <com.payz24.customviews.CustomTextView
                android:id="@+id/tvRefundable"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/size_of_value_five"
                android:layout_marginStart="@dimen/size_of_value_five"
                android:text="refundable"
                android:textColor="@color/black_90"
                android:textSize="12sp"
                fonts:custom_font="@string/aller_std_regular" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:layout_marginTop="@dimen/size_of_value_five"
        android:background="@color/medium_grey" />

</LinearLayout>