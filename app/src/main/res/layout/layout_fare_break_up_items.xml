<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fonts="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/size_of_value_ten"
    android:paddingBottom="@dimen/size_of_value_ten"
    android:orientation="horizontal">

    <com.payz24.customviews.CustomTextView
        android:id="@+id/tvKey"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="60"
        android:text="@string/fare_break_up"
        android:textColor="@color/black"
        fonts:custom_font="@string/aller_std_bold" />


    <com.payz24.customviews.CustomTextView
        android:id="@+id/tvValue"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="50"
        android:text="@string/fare_break_up"
        android:textColor="@color/black"
        android:layout_gravity="end"
        android:gravity="end"
        fonts:custom_font="@string/aller_std_bold" />

</LinearLayout>