<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fonts="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        android:id="@+id/layout"
        layout="@layout/layout_action_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/medium_grey"
        android:scrollbarAlwaysDrawHorizontalTrack="true"
        android:scrollbarThumbVertical="@drawable/scroll_bar_drawable">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/size_of_value_ten"
                android:layout_marginEnd="@dimen/size_of_value_ten"
                android:layout_marginLeft="@dimen/size_of_value_ten"
                android:layout_marginRight="@dimen/size_of_value_ten"
                android:layout_marginStart="@dimen/size_of_value_ten"
                android:layout_marginTop="@dimen/size_of_value_fifteen"
                android:background="@color/white"
                android:orientation="vertical"
                android:padding="@dimen/size_of_value_fifteen">

                <com.payz24.customviews.CustomTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/from"
                    android:textColor="@color/black_90"
                    fonts:custom_font="@string/aller_std_bold" />


                <com.payz24.customviews.CustomTextView
                    android:id="@+id/tvLeavingFrom"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="@dimen/size_of_value_ten"
                    android:drawableLeft="@drawable/ic_leaving_from"
                    android:drawablePadding="@dimen/size_of_value_twenty"
                    android:drawableStart="@drawable/ic_leaving_from"
                    android:text="@string/leaving_from"
                    android:textColor="@color/black_90"
                    fonts:custom_font="@string/aller_std_regular" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_gravity="center"
                        android:layout_weight="80"
                        android:background="@color/medium_dark_grey" />

                    <ImageView
                        android:id="@+id/ivChange"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="10"
                        android:contentDescription="@string/app_name"
                        android:src="@drawable/ic_bus_location_sift" />


                </LinearLayout>

                <com.payz24.customviews.CustomTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/to"
                    android:textColor="@color/black_90"
                    fonts:custom_font="@string/aller_std_bold" />


                <com.payz24.customviews.CustomTextView
                    android:id="@+id/tvGoingTo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="@dimen/size_of_value_ten"
                    android:drawableLeft="@drawable/ic_going_to"
                    android:drawablePadding="@dimen/size_of_value_twenty"
                    android:drawableStart="@drawable/ic_going_to"
                    android:text="@string/going_to"
                    android:textColor="@color/black_90"
                    fonts:custom_font="@string/aller_std_regular" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/llDateSelection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/size_of_value_ten"
                android:layout_marginEnd="@dimen/size_of_value_ten"
                android:layout_marginLeft="@dimen/size_of_value_ten"
                android:layout_marginRight="@dimen/size_of_value_ten"
                android:layout_marginStart="@dimen/size_of_value_ten"
                android:background="@color/white"
                android:orientation="vertical"
                android:padding="@dimen/size_of_value_fifteen">

                <com.payz24.customviews.CustomTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/journey_date"
                    android:textColor="@color/black_90"
                    fonts:custom_font="@string/aller_std_bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/size_of_value_fifteen"
                    android:orientation="horizontal">

                    <com.payz24.customviews.CustomTextView
                        android:id="@+id/tvSelectedDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:drawableLeft="@drawable/ic_calendar"
                        android:drawablePadding="@dimen/size_of_value_ten"
                        android:drawableStart="@drawable/ic_calendar"
                        android:gravity="center"
                        android:text="24"
                        android:textColor="@color/black_90"
                        android:textSize="18sp"
                        fonts:custom_font="@string/aller_std_bold" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/size_of_value_fifteen"
                        android:layout_marginStart="@dimen/size_of_value_fifteen"
                        android:orientation="vertical">

                        <com.payz24.customviews.CustomTextView
                            android:id="@+id/tvSelectedDay"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Mon"
                            android:textColor="@color/black_90"
                            fonts:custom_font="@string/aller_std_regular" />

                        <com.payz24.customviews.CustomTextView
                            android:id="@+id/tvSelectedMonth"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="January"
                            android:textColor="@color/black_90"
                            fonts:custom_font="@string/aller_std_regular" />

                    </LinearLayout>

                    <com.payz24.customviews.CustomTextView
                        android:id="@+id/tvSelectedName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|end"
                        android:layout_marginEnd="@dimen/size_of_value_ten"
                        android:layout_marginRight="@dimen/size_of_value_ten"
                        android:ellipsize="marquee"
                        android:gravity="end"
                        android:singleLine="true"
                        android:text="Today"
                        android:textColor="@color/black_90"
                        fonts:custom_font="@string/aller_std_bold" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llSearch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/size_of_value_ten"
                android:background="@color/colorPrimary"
                android:gravity="center"
                android:padding="@dimen/size_of_value_fifteen">

                <com.payz24.customviews.CustomTextView
                    android:id="@+id/tvSearch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/search"
                    android:textColor="@color/white"
                    fonts:custom_font="@string/aller_std_bold" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/size_of_value_ten"
                    android:layout_marginStart="@dimen/size_of_value_ten"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/ic_bus_white"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>