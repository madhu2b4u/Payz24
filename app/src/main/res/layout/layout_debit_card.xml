<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fonts="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/size_of_value_ten"
        android:paddingEnd="@dimen/size_of_value_ten"
        android:paddingRight="@dimen/size_of_value_ten"
        android:paddingTop="@dimen/size_of_value_ten">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_of_value_three"
            android:layout_weight="10"
            android:contentDescription="@string/app_name"
            android:src="@drawable/ic_credit_card" />

        <com.payz24.customviews.CustomTextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="65"
            android:text="@string/use_debit_card"
            android:textColor="@color/black_90"
            fonts:custom_font="@string/aller_std_regular" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:contentDescription="@string/app_name"
            android:src="@drawable/ic_tick" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/size_of_value_ten"
        android:layout_marginLeft="@dimen/size_of_value_ten"
        android:layout_marginRight="@dimen/size_of_value_ten"
        android:layout_marginStart="@dimen/size_of_value_ten"
        android:background="@drawable/debit_card_bg"
        android:orientation="vertical"
        android:padding="@dimen/size_of_value_ten">

        <com.payz24.customviews.CustomTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/size_of_value_ten"
            android:layout_marginStart="@dimen/size_of_value_ten"
            android:text="@string/debit_card"
            android:textColor="@color/white"
            fonts:custom_font="@string/aller_std_regular" />

        <com.payz24.customviews.CustomTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/size_of_value_ten"
            android:layout_marginStart="@dimen/size_of_value_ten"
            android:layout_marginTop="@dimen/size_of_value_ten"
            android:text="@string/enter_your_card_number"
            android:textColor="@color/white_80"
            fonts:custom_font="@string/aller_std_regular" />

        <com.payz24.customviews.CustomEditText
            android:id="@+id/etCardNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/size_of_value_ten"
            android:layout_marginStart="@dimen/size_of_value_ten"
            android:layout_marginTop="@dimen/size_of_value_ten"
            android:background="@drawable/debit_card_number_bg"
            android:padding="@dimen/size_of_value_five"
            android:textAlignment="center"
            android:textCursorDrawable="@drawable/cursor_black"
            fonts:custom_font="@string/aller_std_regular" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="50"
                android:orientation="vertical">

                <com.payz24.customviews.CustomTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/size_of_value_ten"
                    android:layout_marginStart="@dimen/size_of_value_ten"
                    android:layout_marginTop="@dimen/size_of_value_ten"
                    android:text="@string/valid_up_to"
                    android:textColor="@color/white_80"
                    fonts:custom_font="@string/aller_std_regular" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.payz24.customviews.CustomEditText
                        android:id="@+id/etMonth"
                        android:layout_width="@dimen/size_of_value_fifty"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/size_of_value_ten"
                        android:layout_marginStart="@dimen/size_of_value_ten"
                        android:layout_marginTop="@dimen/size_of_value_ten"
                        android:background="@drawable/debit_card_number_bg"
                        android:hint="@string/mm"
                        android:padding="@dimen/size_of_value_five"
                        android:textAlignment="center"
                        android:textCursorDrawable="@drawable/cursor_black"
                        fonts:custom_font="@string/aller_std_regular" />

                    <com.payz24.customviews.CustomEditText
                        android:id="@+id/etYear"
                        android:layout_width="@dimen/size_of_value_fifty"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/size_of_value_ten"
                        android:layout_marginStart="@dimen/size_of_value_ten"
                        android:layout_marginTop="@dimen/size_of_value_ten"
                        android:background="@drawable/debit_card_number_bg"
                        android:hint="@string/yy"
                        android:padding="@dimen/size_of_value_five"
                        android:textAlignment="center"
                        android:textCursorDrawable="@drawable/cursor_black"
                        fonts:custom_font="@string/aller_std_regular" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginEnd="@dimen/size_of_value_fifteen"
                android:layout_marginRight="@dimen/size_of_value_fifteen"
                android:layout_weight="50"
                android:gravity="end"
                android:orientation="vertical">

                <com.payz24.customviews.CustomTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginLeft="@dimen/size_of_value_ten"
                    android:layout_marginStart="@dimen/size_of_value_ten"
                    android:layout_marginTop="@dimen/size_of_value_ten"
                    android:gravity="end"
                    android:text="@string/cvv_code"
                    android:textColor="@color/white_80"
                    fonts:custom_font="@string/aller_std_regular" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:gravity="end"
                    android:orientation="horizontal">

                    <com.payz24.customviews.CustomEditText
                        android:id="@+id/etCVV"
                        android:layout_width="@dimen/size_of_value_fifty"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/size_of_value_ten"
                        android:layout_marginStart="@dimen/size_of_value_ten"
                        android:layout_marginTop="@dimen/size_of_value_ten"
                        android:background="@drawable/debit_card_number_bg"
                        android:padding="@dimen/size_of_value_five"
                        android:textAlignment="center"
                        android:textCursorDrawable="@drawable/cursor_black"
                        fonts:custom_font="@string/aller_std_regular" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <com.payz24.customviews.CustomTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/size_of_value_ten"
        android:background="@drawable/debit_card_number_bg"
        android:padding="@dimen/size_of_value_five"
        android:text="This card will be securely saved for a faster payment experience. CVV number will not be saved"
        android:textColor="@color/black_90" />
</LinearLayout>