<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fonts="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/medium_grey"
    android:orientation="vertical">


    <include
        android:id="@+id/layout"
        layout="@layout/layout_action_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/size_of_value_ten">


        <com.payz24.customviews.CustomTextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="40"
            android:drawableLeft="@drawable/ic_confirmed_dot"
            android:drawablePadding="@dimen/size_of_value_five"
            android:drawableStart="@drawable/ic_confirmed_dot"
            android:text="@string/confirmed"
            android:textColor="@color/black"
            fonts:custom_font="@string/aller_std_regular" />


        <com.payz24.customviews.CustomTextView
            android:id="@+id/tvCurrentDate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_weight="60"
            android:gravity="end"
            android:textColor="@color/black_90"
            fonts:custom_font="@string/aller_std_regular" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="90">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/size_of_value_fifteen"
            android:background="@drawable/rectangle_bg"
            android:orientation="vertical">

            <com.payz24.customviews.CustomTextView
                android:id="@+id/tvPNR"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:padding="@dimen/size_of_value_twenty"
                android:text="123456789"
                android:textColor="@color/black_90"
                android:textSize="@dimen/font_size_of_value_twenty"
                fonts:custom_font="@string/aller_std_regular" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorPrimary" />

            <com.payz24.customviews.CustomTextView
                android:id="@+id/tvAirWayName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/size_of_value_ten"
                android:text="jet airways"
                android:visibility="gone"
                android:textColor="@color/black_90"
                android:textSize="@dimen/font_size_of_value_eighteen"
                fonts:custom_font="@string/aller_std_regular" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="40"
                    android:orientation="vertical">

                    <com.payz24.customviews.CustomTextView
                        android:id="@+id/tvSourceShortName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="@dimen/size_of_value_ten"
                        android:text=""
                        android:textColor="@color/black_90"
                        android:textSize="@dimen/font_size_of_value_twenty_five"
                        fonts:custom_font="@string/aller_std_regular" />

                    <com.payz24.customviews.CustomTextView
                        android:id="@+id/tvSourceFullName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="@dimen/size_of_value_ten"
                        android:text=""
                        android:textColor="@color/black_90"
                        fonts:custom_font="@string/aller_std_regular" />

                </LinearLayout>

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="10"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/ic_plane_red" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="40"
                    android:orientation="vertical">

                    <com.payz24.customviews.CustomTextView
                        android:id="@+id/tvDestinationShortName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="@dimen/size_of_value_ten"
                        android:text=""
                        android:textColor="@color/black_90"
                        android:textSize="@dimen/font_size_of_value_twenty_five"
                        fonts:custom_font="@string/aller_std_regular" />

                    <com.payz24.customviews.CustomTextView
                        android:id="@+id/tvDestinationFullName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="@dimen/size_of_value_ten"
                        android:text=""
                        android:textColor="@color/black_90"
                        fonts:custom_font="@string/aller_std_regular" />

                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/medium_grey" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/size_of_value_ten"
                android:visibility="gone">

                <com.payz24.customviews.CustomTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/travel_date"
                    android:textColor="@color/black_90"
                    fonts:custom_font="@string/aller_std_regular" />


                <com.payz24.customviews.CustomTextView
                    android:id="@+id/tvTravelDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/size_of_value_two"
                    android:text=""
                    android:textColor="@color/black_90"
                    fonts:custom_font="@string/aller_std_regular" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/medium_grey" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="40"
                    android:orientation="vertical"
                    android:padding="@dimen/size_of_value_ten">

                    <com.payz24.customviews.CustomTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/depart"
                        android:textColor="@color/black_90"
                        fonts:custom_font="@string/aller_std_regular" />


                    <com.payz24.customviews.CustomTextView
                        android:id="@+id/tvDepartureDate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/size_of_value_two"
                        android:text=""
                        android:textColor="@color/black_90"
                        fonts:custom_font="@string/aller_std_regular" />

                </LinearLayout>

                <com.payz24.customviews.CustomTextView
                    android:id="@+id/tvLayover"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="20"
                    android:gravity="center"
                    android:text=""
                    android:textColor="@color/black_90"
                    android:visibility="gone"
                    fonts:custom_font="@string/aller_std_regular" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="40"
                    android:orientation="vertical"
                    android:padding="@dimen/size_of_value_ten">

                    <com.payz24.customviews.CustomTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/arrival"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textColor="@color/black_90"
                        fonts:custom_font="@string/aller_std_regular" />


                    <com.payz24.customviews.CustomTextView
                        android:id="@+id/tvArrivalDate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/size_of_value_two"
                        android:text=""
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textColor="@color/black_90"
                        fonts:custom_font="@string/aller_std_regular" />

                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/medium_grey"
                android:visibility="visible" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/size_of_value_ten"

                android:visibility="gone">

                <com.payz24.customviews.CustomTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/size_of_value_two"
                    android:text="Passenger"
                    android:textColor="@color/black_90"
                    fonts:custom_font="@string/aller_std_regular" />

                <com.payz24.customviews.CustomTextView
                    android:id="@+id/tvPassengerName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/size_of_value_two"
                    android:text="mahesh reddy"
                    android:textColor="@color/black_90"
                    fonts:custom_font="@string/aller_std_regular" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/medium_grey" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"
                android:padding="@dimen/size_of_value_ten">

                <com.payz24.customviews.CustomTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/size_of_value_two"
                    android:text="Total Amount Paid"
                    android:textColor="@color/black_90"
                    fonts:custom_font="@string/aller_std_regular" />

                <com.payz24.customviews.CustomTextView
                    android:id="@+id/tvPaidValue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/size_of_value_two"
                    android:drawableRight="@drawable/ic_info"
                    android:textColor="@color/black_90"
                    fonts:custom_font="@string/aller_std_regular" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/size_of_value_ten">


            </LinearLayout>

            <LinearLayout
                android:id="@+id/llBookReturn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="@dimen/size_of_value_ten">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/size_of_value_ten"
                    android:layout_marginRight="@dimen/size_of_value_ten"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/ic_flight_arrow" />


                <com.payz24.customviews.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/size_of_value_two"
                    android:text="E-TICKET"
                    android:padding="10dp"
                    android:id="@+id/moredetails"
                    android:gravity="center"
                    android:textColor="@color/light_red"
                    fonts:custom_font="@string/aller_std_regular" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/tvHomes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="@dimen/size_of_value_ten">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/size_of_value_ten"
                    android:layout_marginRight="@dimen/size_of_value_ten"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/ic_home_black_24dp" />

                <com.payz24.customviews.CustomTextView
                    android:id="@+id/home"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/size_of_value_five"
                    android:text="HOME"
                    android:textColor="@color/colorPrimary"
                    fonts:custom_font="@string/aller_std_regular" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <com.payz24.customviews.CustomTextView
        android:id="@+id/tvBookAgain"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginTop="@dimen/size_of_value_two"
        android:text="@string/book_again"
        android:textColor="@color/white"
        android:background="@color/colorPrimary"
        fonts:custom_font="@string/aller_std_regular" />
</LinearLayout>