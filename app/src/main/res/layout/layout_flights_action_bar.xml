<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fonts="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimary"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/size_of_value_ten"
        android:layout_marginEnd="@dimen/size_of_value_ten"
        android:layout_marginTop="@dimen/size_of_value_ten"
        android:layout_marginLeft="@dimen/size_of_value_ten"
        android:layout_marginRight="@dimen/size_of_value_ten"
        android:layout_marginStart="@dimen/size_of_value_ten"
        android:layout_gravity="center"
        android:gravity="center"
        android:background="@drawable/debit_card_number_bg"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:contentDescription="@string/app_name"
            android:layout_marginLeft="@dimen/size_of_value_ten"
            android:layout_marginStart="@dimen/size_of_value_ten"
            android:gravity="center"
            android:src="@drawable/ic_contacts_arrow_back" />


        <com.payz24.customviews.CustomEditText
            android:id="@+id/etSearch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/size_of_value_ten"
            android:layout_marginStart="@dimen/size_of_value_ten"
            android:background="@drawable/debit_card_number_bg"
            android:padding="@dimen/size_of_value_eight"
            android:text=""
            android:hint="@string/enter_city_or_airport_name"
            android:textCursorDrawable="@drawable/cursor_black"
            fonts:custom_font="@string/aller_std_regular" />
    </LinearLayout>

</LinearLayout>