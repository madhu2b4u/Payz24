<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fonts="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/size_of_value_five">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivContactPic"
            android:layout_width="@dimen/size_of_value_fourty"
            android:layout_height="@dimen/size_of_value_fourty"
            android:layout_marginLeft="@dimen/size_of_value_ten"
            android:layout_marginStart="@dimen/size_of_value_ten"
            android:layout_gravity="center"
            android:contentDescription="@string/app_name"
            android:src="@mipmap/ic_launcher_round" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.payz24.customviews.CustomTextView
                android:id="@+id/tvContactName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/size_of_value_fifteen"
                android:layout_marginStart="@dimen/size_of_value_fifteen"
                android:layout_marginTop="@dimen/size_of_value_five"
                android:ellipsize="marquee"
                android:singleLine="true"
                android:textColor="@color/black"
                fonts:custom_font="@string/aller_std_regular" />

            <LinearLayout
                android:id="@+id/llContactNumbers"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/size_of_value_fifteen"
                android:layout_marginStart="@dimen/size_of_value_fifteen"
                android:orientation="vertical" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/size_of_value_ten"
        android:background="@color/medium_grey" />
</LinearLayout>